<div class="container mt-3">
  <div class="row">
    <div class="col-md-6">
      <h2>Form edit data contact</h2>
      <% if (typeof errors != 'undefined') { %>
      <div class="alert alert-danger" role="alert">
        <ul>
          <% errors.forEach(error => { %>
          <li><%= error.msg %></li>
          <% }) %>
        </ul>
      </div>
      <% } %>
      <form method="post" action="/contact?_method=PUT">
        <input type="hidden" name="_id" value="<%= contact._id %>" />
        <input
          type="hidden"
          name="oldNama"
          value="<%= contact.oldNama ||contact.nama %>"
        />
        <div class="mb-3">
          <label for="nama" class="form-label"> Nama </label>
          <input
            type="text"
            class="form-control"
            id="nama"
            name="nama"
            required
            value="<%= contact.nama %>"
          />
          <label for="nohp" class="form-label"> Number Phone </label>
          <input
            type="text"
            class="form-control"
            id="nohp"
            name="nohp"
            required
            value="<%= contact.nohp %>"
          />
          <label for="email" class="form-label"> Email </label>
          <input
            type="email"
            class="form-control"
            id="email"
            name="email"
            required
            value="<%= contact.email %>"
          />
        </div>
        <button
          type="submit"
          class="btn btn-primary"
          onclick="return confirm('Apakah data sudah benar?')"
        >
          Save Perubahan
        </button>
      </form>
    </div>
  </div>
</div>
